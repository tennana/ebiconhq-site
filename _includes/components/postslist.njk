<div class="card-grid">
  {% for post in posts %}
    <div class="card">
      <h3 class="card__title">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h3>
      <p class="card__date">Update: {{ post.date | readableDate }}</p>
      <p class="card__description">{{ post.data.description }}</p>
      <p class="card__subtitle">Tags:
      <span class="card__tags">
      {% if post.data.tags[1] %}
        {% set tag = post.data.tags[1] %}
        <a href="{{ url }}/events/{{ tag | slug }}">{{ tag }}</a>
      {% endif %}
      </span></p>
    </div>
  {% endfor %}
</div>
